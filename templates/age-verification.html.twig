<!DOCTYPE html>
<html lang="{{ grav.language.getLanguage ?: 'en' }}">
<head>
    {% block head %}
    <meta charset="utf-8" />
    <title>{{ "AGE_VERIFICATION.TITLE"|t }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {% endblock %}
</head>
<body>
    <h1>{{ "AGE_VERIFICATION.HEADING"|t }}</h1>
    <p>{{ "AGE_VERIFICATION.MESSAGE"|t }}</p>

    <form method="post">
        <button type="submit" name="age_verify" value="true">{{ "AGE_VERIFICATION.BUTTON"|t }}</button>
        <a href="{{ age_verification.redirect_url}}">{{ "AGE_VERIFICATION.BUTTON_NO"|t }}</a>
    </form>
</body>
</html>
